{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./global.d.ts", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src/**/*"]
}
